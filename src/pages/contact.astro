---
import Layout from '../layouts/Layout.astro';
import ContextAlert from '../components/ContextAlert.astro';
import Markdown from '../components/Markdown.astro';

const explainer = 'Merak ettiğiniz için teşekkürler! Bize ulaşmak için aşağıdaki e-posta adresini kullanabilirsiniz.';
---

<Layout title="Contact Us">
    <ContextAlert class="mb-8" />

    <Markdown content={explainer} class="mb-10 text-4xl text-gray-800 font-family:'Montserrat', sans-serif;" />
    <p>
        <a href="mailto:info@oht.solutions" class="btn btn-lg sm:min-w-64">info@oht.solutions</a>
    </p>
</Layout>
